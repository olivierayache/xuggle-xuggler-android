<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/an0" android:state_checked="true" android:drawable="@drawable/ic_record_active"/>
    <item android:id="@+id/an1" android:state_checked="false" android:drawable="@drawable/ic_record"/>
    <transition android:fromId="@+id/an1" android:toId="@+id/an0"
                android:drawable="@drawable/animated_record"
                android:reversible="true"/>
</animated-selector>